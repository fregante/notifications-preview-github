{
	"repository": "tanmayrajani/notifications-preview-github",
	"license": "MIT",
	"scripts": {
		"build": "parcel build source/manifest.json --no-source-maps --no-minify --dist-dir distribution --no-cache --detailed-report 0 && babel distribution -d distribution --no-comments",
		"lint": "xo",
		"release": "run-s build update-version upload:*",
		"test": "run-p lint build",
		"upload:amo": "cd distribution && webext submit",
		"upload:cws": "cd distribution && webstore upload --auto-publish",
		"version": "dot-json --indent=2 distribution/manifest.json version",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"extends": "xo-react",
		"ignores": [
			"source/webext-options-sync.js"
		],
		"settings": {
			"react": {
				"version": "16.13"
			}
		}
	},
	"dependencies": {
		"delegate-it": "^2.0.2",
		"dom-chef": "^4.2.2",
		"doma": "^3.0.1",
		"element-ready": "^5.0.0",
		"push-form": "^0.8.0",
		"select-dom": "^7.1.0",
		"webext-base-css": "^1.3.1",
		"webext-options-sync": "^2.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/core": "^7.12.10",
		"@parcel/config-webextension": "^2.0.0-nightly.2182",
		"@parcel/transformer-webextension": "^2.0.0-nightly.2182",
		"chrome-webstore-upload-cli": "^1.2.1",
		"dot-json": "^1.2.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-nightly.558",
		"web-ext-submit": "^5.5.0",
		"xo": "^0.37.1"
	}
}
