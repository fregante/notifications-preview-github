{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --dist-dir distribution --no-cache --no-content-hash --no-source-maps --detailed-report 0",
		"lint": "xo",
		"test": "npm run lint && npm run build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"Chrome 61",
		"Firefox 55"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"extends": "xo-react",
		"settings": {
			"react": {
				"version": "16.13"
			}
		}
	},
	"dependencies": {
		"delegate-it": "^3.0.0",
		"dom-chef": "^5.0.0",
		"doma": "^3.0.1",
		"element-ready": "^6.0.0",
		"push-form": "^0.8.0",
		"select-dom": "^7.1.1",
		"webext-base-css": "^1.3.1",
		"webext-options-sync": "^2.0.1"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.0.0-nightly.2274",
		"eslint-config-xo-react": "^0.25.0",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"parcel": "^2.0.0-nightly.650",
		"xo": "^0.53.1"
	},
	"webExt": {
		"sourceDir": "distribution"
	}
}
